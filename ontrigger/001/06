public class Conditionals {

    public static void main(String[] args) {
        int a = 21;
        int b = 15;
        int c = a + b;

        if (c > 40) {
            System.out.println("It is bigger than 40");
        }
        else if (c > 30 && c < 40){
            System.out.println("It is between 30 and 40");
        }
    }
}
